.openModalAddTask {
    background:#2196F3 !important;
}

.table-tasks tbody tr {
    cursor:pointer;
}

.btn-slider{
    padding:0;
}
.btn-slider button{
    padding:0 !important;
}
.btn-slider span{
    text-align:center;
    border-top: 1px solid gainsboro;
    border-bottom: 1px solid gainsboro;
}

#addFeatureToSprint {
    position:absolute;
    right:20px;
    margin-top:-26px;
}

#featureTableSprint{
    width:100% !important;
}

input[type="search"]{
    width:auto;
}

.edit-button{
    position:absolute;
    right:25px;
    top:25px;
    width:40px;
    height:40px;
    cursor:pointer !important;
    z-index:555;
    padding:5px;
    border-radius:100%;
    pointer-events:auto !important;
}

#chartTitleAccordion {
    background-color:#2196F3;
    text-align:left;
    margin-top:0px;
    border :none !important;
    font-size:15px;
    padding-left:15px;
    line-height: 1.1;
}

#accordionCharts{
    margin-bottom:15px;
}

.chart {
    border:none !important;
}

.highcharts-container {
    border:none !important;
}

.border-accordion.ui-accordion-content-active {
    display:inline-block !important;
}

.dataTables_filter input{
    background-color: rgb(233, 224, 224) !important;
}

#sprintTitle {
    text-align:center;
}

.accordion div.ui-accordion-header {
    padding: 0.4em;
    margin-top: 0.3em;
    font-size: 1.2em;
}

