@*Content PwChange Page*@

@(id: String)

@defining(play.core.PlayVersion.current) { version =>

<div class="content">
	<h1>Change your password</h1>
	
	@helper.form(routes.MailController.changePassword(id : String)) {
		@helper.CSRF.formField
		<div class="champsFormulaire"><h2>New password :</h2><input type="password" name="pass"></div>
		<div class="champsFormulaire"><h2>Verify your password :</h2><input type="password" name="passVerif"></div>
		</br>
		@if(flash.containsKey("!samePass")){
	        	@flash.get("!samePass")
	    }
	    </br>
	    <button type="submit">Confirm</button>
	}
</div>
}