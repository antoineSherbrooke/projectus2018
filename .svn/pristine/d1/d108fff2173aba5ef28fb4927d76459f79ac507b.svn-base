@*Team Page for User/Not Logged*@

@(listActive : List[Users],listStatus : List[Status])

@defining(play.core.PlayVersion.current) { version =>
	<h1 id="lteampage"></h1>
	<div id="teamList">
		@for(status <- listStatus) {
			<h2>@status.getName()</h2>
			<div class="teamElement">
				@for(membre <- listActive) {
					@if(status==membre.getStatus()) {
						<div class="userTeam">
		       				<a href=@routes.ProfileController.profile(membre.getCip())><h3>@membre.getFirstName() @membre.getLastName()</h3></a>
		       				<a href="mailto:@membre.getMail()">@membre.getMail()</a>
		        		</div>
	        		}
	        	}
			</div>
		}
	</div>
	<a href=@routes.TeamController.pastTeam><button type="submit" id="bpastmembers"></button></a>
}