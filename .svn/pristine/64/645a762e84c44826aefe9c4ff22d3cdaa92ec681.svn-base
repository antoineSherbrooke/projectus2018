@(superadmins:List[Associations])

@administrator("Super Administrator") {
    <div class="col-lg-12 admin-container" id="superAdmin">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">List of administrators</h3>
            </div>
            <div class="panel-body">
                @if(!superadmins.isEmpty()){
                <table class="table table-striped table-hover">
                    <thead>
                    <tr id="headFeature">
                        <th>Cip</th>
                        <th>First name</th>
                        <th>Last name</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for(superadmin <- superadmins) {
                    <tr>
                        <td>@superadmin.getUsers().getCip()</td>
                        <td>@superadmin.getUsers().getFirstName()</td>
                        <td>@superadmin.getUsers().getLastName()</td>
                    </tr>
                    }
                    </tbody>
                </table>
                }
            </div>
        </div>

    </div>
    <button id="openModal" class="paper btn btn-success" data-toggle="modal" data-target="#dialogAddSuperAdmin"><img class ="imgAdd" src="@routes.Assets.versioned("images/ic_add_white.svg")" /></button>
    <div class="modal fade" id="dialogAddSuperAdmin">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Create a super administrator</h4>
                </div>
                <form class="form" method="POST" action="@routes.AdministratorController.addSuperAdministrator()">
                    <div class="modal-body">
                        <div class="col-lg-12">
                            <div class="col-lg-3">First name : </div>
                            <div class="col-lg-9">
                                <input id="firstName" type="text" placeholder="Name" name="firstName" required>
                            </div>
                            <div class="col-lg-3">Last name : </div>
                            <div class="col-lg-9">
                                <input id="lastName" type="text" name="lastName" placeholder="Last name" required>
                            </div>
                            <div class="col-lg-3">Cip : </div>
                            <div class="col-lg-9">
                                <input id="cip" type="text" placeholder="Cip of the super administrator" name="cip" required>
                            </div>
                            <p class="error" id="superError"></p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input type="submit" id="addSuper" title="Add release" type="button" value="Ok" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
} {
    <script type="text/javascript" src="@routes.Assets.versioned("javascripts/administrator.js")"></script>
} {
    <link rel="stylesheet" media="screen" href="@routes.Assets.versioned("stylesheets/admin.css")">
}