}


/*-----Footer----*/


footer
{
	background-color: #3a3a3a;
    overflow: hidden;
    position: absolute;
    width: 100%;
    bottom: 0px;
}

footer h1
{
	color: #fff;
	font-size: 12px;
	line-height: 48px;
    font-family: 'Arial', sans-serif;
    text-align: center;
}