*{
    margin: 0px;
    padding: 0px;
}


/*-----Header----*/


header
{
    display : flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: #3a3a3a;
    padding: 2em 1em;
}

header a
{
    color: #fff;
    text-align: center;
    padding: 2em 1em;
    text-decoration: none;
    font-weight: 700;
    font-family: 'Arial', sans-serif;

    transition: color 1s, transform 2s;
    transition: background 1s, transform 2s;
}

header a:hover
{
    background-color: #ddd;
    color: #00a758;
    transition: color 1s, transform 2s;
    transition: background 1s, transform 2s;
}


/*-----Messages----*/


@keyframes transition
{
0%   { margin-left: -10px;opacity:0; }
100% { margin-left: 0;opacity:1; }
}

.messages
{
    height: 2em;
    margin: 0em;
    opacity:0;animation: transition 0.25s ease-in-out 0.5s forwards;
}

.texte
{
    font-family: 'Arial', sans-serif;
    padding: 1em 2em;
    font-weight: bold;
    color: #FFF;
}

.error
{
    background-color: #FB0000;
}

.success
{
    background-color: #2d9d5f;
}


/*-----Content----*/


.content
{
	background-color : #fff;
    overflow: hidden;
    margin: 2em 2em;
}

.content h1
{
	color: #00a758;
	font-size: 32px;
	line-height: 36px;
	font-family: 'Arial', sans-serif;
	margin-bottom :  1em;
	
}

.content h2
{
	color: #000;
	font-size: 18px;
	line-height: 22px;
	font-family: 'Arial', sans-serif;
}

.content button
{
	text-decoration: none;
    display: inline-block;
    border: none;
    border-radius: 3px;
    background-color: #2d9d5f;
    padding: 0.625em 2.153em;
    line-height: 20px;
    line-height: 1.25rem;
    color: #fff !important;
    font-size: 14.4px;
    font-size: 0.9rem;
    font-weight: bold;
    margin-top: 1.25em;
}

.content button:hover
{
	text-decoration: none;
    display: inline-block;
    border: none;
    border-radius: 3px;
    background-color: #016734;
    padding: 0.625em 2.153em;
    line-height: 20px;
    line-height: 1.25rem;
    color: #fff !important;
    font-size: 14.4px;
    font-size: 0.9rem;
    font-weight: bold;
    margin-top: 1.25em;
}

.content searchbar
{
	position: relative;
	width: 1040px;
	height: auto;
}

.content li
{
	margin-bottom : 0.5em;
}

.content li:before
{
	content: "- "; 
}

